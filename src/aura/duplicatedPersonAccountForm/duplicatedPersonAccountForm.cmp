<aura:component implements="force:hasRecordId,flexipage:availableForAllPageTypes" access="global" controller="newPersonAccountMantikiInvocableClass">
    <aura:attribute name="recordId" type="Id" default=""/>
    <aura:attribute name="isDeleted" type="Boolean" default="false"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <article class="slds-card" isTrue="{!v.isDeleted}">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__body">
                    <h1 class="slds-card__header-title">
                        Account Deleted
                    </h1>
                </div>
            </header>
        </div>
    </article>
</aura:component>